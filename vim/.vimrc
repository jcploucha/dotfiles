filetype plugin indent on

" enable powerline
set rtp+=~/.pyenv/versions/2.7.13/lib/python2.7/site-packages/powerline/bindings/vim
set laststatus=2

" syntax & highlighting
syntax on

set backspace=2
" show line numbers
set number

" make tabs 2 spaces
set tabstop=2
set softtabstop=2
set expandtab
set showcmd
set cursorline
set wildmenu
set foldenable

" case insensitive search
set ignorecase
set smartcase
set infercase

" auto-indent and make it 2 spaces
set autoindent
set shiftwidth=2
